{
    "files.associations": {
        "ostream": "cpp",
        "iostream": "cpp"
    },
    "code-runner.executorMap": {
        "cpp": "cd $dir && if exist \"$fileDirname/$fileBasenameNoExtension.exe\" del \"$fileDirname/$fileBasenameNoExtension.exe\" && C:/msys64/ucrt64/bin/g++.exe -g \"$file\" -o \"$fileDirname/$fileBasenameNoExtension.exe\" && \"$fileDirname/$fileBasenameNoExtension.exe\""
    },
    "code-runner.runInTerminal": true,
    "code-runner.clearPreviousOutput": true
}
